{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Launch Ngrok",
        "type": "shell",
        "command": "ngrok http -subdomain=<SUBDOMAIN> <PORT>",
        "windows": {
          "command": "ngrok http -subdomain=<SUBDOMAIN> <PORT>"
        },
        "group": "none",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Launch App",
        "type": "shell",
        "command": "npm start",
        "windows": {
          "command": "npm start"
        },
        "group": "none",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      }
    ]
}