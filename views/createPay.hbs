<div class="form">
  <form action="/createPay" method="POST">

        <select placeholder="dasdsa">
            <option value="">Select Sender Name*</option>
            <option  value="{{pay.nameSender}}">Todor Yankov Karachorbadzhiev</option>
            <option  value="{{pay.nameSender}}">Dimo Yankov Karachorbadzhiev</option>
            <option  value="{{pay.nameSender}}">Ivanka Dimova Karachorbadzhieva</option>
