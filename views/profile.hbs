  {{!-- <h4></h4>You have visit this site {{visitNumber}} times</h4> --}}
   {{#with user}}
    <div class="profile-container">
                <!-- Do not forget to change the path to the image -->
                <!-- Gender of the user determines which picture is displayed as their avatar -->
                <img class="profile-img" src="/static/images/{{gender}}.png">
           <p>User: <span>{{gender}}</span></p>
              </div>
  <p>User: <span>{{username}}</span></p>
<div class="admin">
<li><a href="/user">Change User Details</a></li>
<li><a href="/createPay">Create</a></li>
<p>Table:</p>
   <p>You have created: <span>{{tablePays.counts}}</span> records</p>
   <table>
  <colgroup class="colgroup">
    <col style="background-color:burlywood">
    <col span="99">
  </colgroup>
    <tr class="tr">
    <th>Date:</th>
    <th>Sender</th>
    <th>Resiver</th>
    <th>Money</th>
    <th>description</th>
    </tr>
    {{#each tablePays}}
         <tr class="tr">
    {{> profilePayPreview}}
     </tr>
    {{else}}
    <p>No pays in database. <a href="/createPay">Create the first listing!</a></p>
    {{/each}}
 </table>
</div>
{{/with}}